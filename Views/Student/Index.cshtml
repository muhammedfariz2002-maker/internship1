@model List<internship1.Models.Student>

@{
    await Html.RenderPartialAsync("_AdminNavbar");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Management Dashboard</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #4361ee;
            --primary-dark: #3a56d4;
            --secondary-color: #7209b7;
            --success-color: #06d6a0;
            --warning-color: #ffd166;
            --danger-color: #ef476f;
            --dark-color: #2b2d42;
            --light-color: #f8f9fa;
            --gray-light: #e9ecef;
            --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fb;
            color: var(--dark-color);
            padding-top: 20px;
        }

        /* Dashboard Cards */
        .dashboard-card {
            border: none;
            border-radius: 16px;
            box-shadow: var(--shadow);
            transition: var(--transition);
            height: 100%;
            overflow: hidden;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .card-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .card-icon {
            font-size: 2.5rem;
            opacity: 0.9;
            margin-bottom: 15px;
        }

        /* Stats Card */
        .stats-card {
            background: white;
        }

        .stats-table {
            font-size: 0.9rem;
        }

            .stats-table th {
                font-weight: 600;
                color: #6c757d;
                border-bottom: 2px solid var(--gray-light);
                padding: 12px 10px;
            }

            .stats-table td {
                padding: 10px;
                border-bottom: 1px solid var(--gray-light);
            }

            .stats-table tr:last-child td {
                border-bottom: none;
            }

        /* Main Content */
        .content-header {
            background: white;
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
            border-left: 5px solid var(--primary-color);
        }

        .content-title {
            font-weight: 700;
            color: var(--dark-color);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .content-title i {
                color: var(--primary-color);
            }

        /* Action Buttons */
        .btn-action {
            border-radius: 10px;
            font-weight: 600;
            padding: 10px 20px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: var(--transition);
        }

        .btn-export {
            background: linear-gradient(135deg, #06d6a0, #05b888);
            color: white;
            border: none;
        }

            .btn-export:hover {
                background: linear-gradient(135deg, #05b888, #049c72);
                color: white;
                transform: translateY(-2px);
            }

        .btn-add {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
        }

            .btn-add:hover {
                background: linear-gradient(135deg, var(--primary-dark), #5a08a0);
                color: white;
                transform: translateY(-2px);
            }

        /* Search Form */
        .search-form {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: var(--shadow);
            margin-bottom: 25px;
        }

        .search-input {
            border: 2px solid var(--gray-light);
            border-radius: 12px;
            padding: 12px 20px;
            font-size: 1rem;
            transition: var(--transition);
        }

            .search-input:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
            }

        .btn-search {
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 25px;
            font-weight: 600;
            transition: var(--transition);
        }

            .btn-search:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
            }

        .btn-clear {
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 25px;
            font-weight: 600;
            transition: var(--transition);
        }

            .btn-clear:hover {
                background: #5a6268;
                color: white;
            }

        /* Students Table */
        .students-table-container {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .table-responsive {
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--gray-light);
        }

        .students-table {
            margin: 0;
            font-size: 0.95rem;
        }

            .students-table thead {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                color: white;
            }

            .students-table th {
                padding: 18px 15px;
                font-weight: 600;
                border: none;
            }

            .students-table tbody tr {
                transition: var(--transition);
            }

                .students-table tbody tr:hover {
                    background-color: rgba(67, 97, 238, 0.05);
                }

            .students-table td {
                padding: 15px;
                vertical-align: middle;
                border-bottom: 1px solid var(--gray-light);
            }

            .students-table tbody tr:last-child td {
                border-bottom: none;
            }

        /* Action Buttons in Table */
        .btn-table {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: var(--transition);
        }

        .btn-edit {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary-color);
            border: 1px solid rgba(67, 97, 238, 0.2);
        }

            .btn-edit:hover {
                background: var(--primary-color);
                color: white;
                transform: translateY(-2px);
            }

        .btn-delete {
            background: rgba(239, 71, 111, 0.1);
            color: var(--danger-color);
            border: 1px solid rgba(239, 71, 111, 0.2);
        }

            .btn-delete:hover {
                background: var(--danger-color);
                color: white;
                transform: translateY(-2px);
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            color: #6c757d;
        }

            .empty-state i {
                font-size: 3rem;
                color: var(--gray-light);
                margin-bottom: 15px;
            }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .content-header {
                padding: 20px;
            }

            .students-table-container {
                padding: 15px;
            }

            .students-table th,
            .students-table td {
                padding: 12px 8px;
                font-size: 0.9rem;
            }

            .btn-table {
                padding: 6px 12px;
                font-size: 0.8rem;
            }

            .btn-action {
                padding: 8px 16px;
                font-size: 0.9rem;
            }

            .search-form .row > div {
                margin-bottom: 10px;
            }

            .btn-search,
            .btn-clear {
                width: 100%;
                margin-bottom: 10px;
            }
        }

        @@media (max-width: 576px) {
            .dashboard-card {
                margin-bottom: 15px;
            }

            .content-header {
                padding: 15px;
            }

            .content-title {
                font-size: 1.5rem;
            }

            .students-table th:nth-child(2),
            .students-table td:nth-child(2),
            .students-table th:nth-child(3),
            .students-table td:nth-child(3) {
                display: none;
            }

            .action-buttons {
                display: flex;
                flex-direction: column;
                gap: 5px;
            }

            .btn-table {
                width: 100%;
                justify-content: center;
            }
        }

        /* Animation */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }

        /* Badge for course */
        .course-badge {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary-color);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-3 px-md-4 px-lg-5">

        <!-- Dashboard Stats Row -->
        <div class="row mb-4 fade-in">
            <!-- Total Students Card -->
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card dashboard-card card-primary text-white">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="card-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h5 class="card-title mb-2">Total Students</h5>
                                <h2 class="card-text mb-0">@ViewBag.TotalStudents</h2>
                                <p class="mb-0 opacity-75">Registered in system</p>
                            </div>
                            <i class="fas fa-chart-line fa-2x opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Students per Course -->
            <div class="col-12 col-md-6 col-lg-8 mb-4">
                <div class="card dashboard-card stats-card">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-graduation-cap text-primary me-2"></i>
                                Students by Course
                            </h5>
                            <span class="badge bg-primary">@ViewBag.CourseCounts.Count Courses</span>
                        </div>
                        <div class="table-responsive">
                            <table class="table stats-table mb-0">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th>Students Count</th>
                                        <th>Percentage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.CourseCounts)
                                    {
                                        var percentage = ViewBag.TotalStudents > 0 ?
                                        Math.Round((item.Count * 100.0) / ViewBag.TotalStudents, 1) : 0;

                                        <tr>
                                            <td>
                                                <span class="course-badge">@item.Course</span>
                                            </td>
                                            <td>
                                                <strong>@item.Count</strong> students
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                                        <div class="progress-bar bg-primary"
                                                             style="width: @percentage%"></div>
                                                    </div>
                                                    <span>@percentage%</span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="content-header fade-in">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                <div class="mb-3 mb-md-0">
                    <h2 class="content-title">
                        <i class="fas fa-user-graduate"></i>
                        Students Management
                    </h2>
                    <p class="text-muted mb-0">Manage all student records in one place</p>
                </div>
                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-action btn-export" href="/Student/Export">
                        <i class="fas fa-file-export"></i>
                        Export to Excel
                    </a>
                    <a class="btn btn-action btn-add" href="/Student/Create">
                        <i class="fas fa-plus-circle"></i>
                        Add New Student
                    </a>
                </div>
            </div>
        </div>

        <!-- Search Form -->
        <div class="search-form fade-in">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label fw-semibold">Search Students</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text"
                               name="search"
                               class="form-control search-input border-start-0"
                               placeholder="Search by name, email, or course..."
                               value="@Context.Request.Query["search"]" />
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-8 d-flex gap-2">
                    <button class="btn btn-search flex-grow-1">
                        <i class="fas fa-search me-2"></i>
                        Search Students
                    </button>
                    <a href="/Student/Index" class="btn btn-clear">
                        <i class="fas fa-times me-2"></i>
                        Clear Filters
                    </a>
                </div>
            </form>
        </div>

        <!-- Students Table -->
        <div class="students-table-container fade-in">
            @if (Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table students-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Student Name</th>
                                <th>Email Address</th>
                                <th>Course</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="fw-semibold">#@item.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-placeholder rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                                 style="width: 36px; height: 36px; font-size: 0.9rem;">
                                                @item.Name.Substring(0, 1).ToUpper()
                                            </div>
                                            <span>@item.Name</span>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="mailto:@item.Email" class="text-decoration-none">
                                            <i class="fas fa-envelope me-2 text-muted"></i>
                                            @item.Email
                                        </a>
                                    </td>
                                    <td>
                                        <span class="course-badge">@item.Course</span>
                                    </td>
                                    <td>
                                        <div class="action-buttons d-flex gap-2">
                                            <a class="btn btn-table btn-edit" href="/Student/Edit/@item.Id">
                                                <i class="fas fa-edit"></i>
                                                Edit
                                            </a>
                                            <a class="btn btn-table btn-delete" href="/Student/Delete/@item.Id"
                                               onclick="return confirm('Are you sure you want to delete this student?');">
                                                <i class="fas fa-trash-alt"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Footer -->
                <div class="mt-4 pt-3 border-top d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        <i class="fas fa-info-circle me-2"></i>
                        Showing <strong>@Model.Count</strong> student(s)
                    </div>
                    <div class="text-muted">
                        <i class="fas fa-database me-2"></i>
                        Total in system: <strong>@ViewBag.TotalStudents</strong>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="empty-state">
                    <i class="fas fa-user-slash"></i>
                    <h4 class="mb-3">No Students Found</h4>
                    <p class="text-muted mb-4">
                        @if (!string.IsNullOrEmpty(Context.Request.Query["search"]))
                        {
                            <span>No students match your search criteria.</span>
                        }
                        else
                        {
                            <span>No students have been added yet. Start by adding your first student.</span>
                        }
                    </p>
                    <a class="btn btn-action btn-add" href="/Student/Create">
                        <i class="fas fa-plus-circle"></i>
                        Add First Student
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Add animation to table rows
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.students-table tbody tr');
            rows.forEach((row, index) => {
                row.style.animationDelay = `${index * 0.05}s`;
                row.classList.add('fade-in');
            });

            // Search form enhancement
            const searchForm = document.querySelector('form[method="get"]');
            const searchInput = searchForm.querySelector('input[name="search"]');

            searchInput.addEventListener('input', function() {
                if (this.value.trim().length > 0) {
                    this.parentElement.classList.add('has-value');
                } else {
                    this.parentElement.classList.remove('has-value');
                }
            });
        });
    </script>
</body>
</html>