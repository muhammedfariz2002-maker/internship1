@model internship1.Models.Student

@{
    await Html.RenderPartialAsync("_AdminNavbar");
}

<div class="container mt-4">

    <h2 class="mb-3 text-danger">Delete Student</h2>
    <hr />

    <p>Are you sure you want to delete this student?</p>

    <ul class="list-group mb-3">
        <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
        <li class="list-group-item"><strong>Course:</strong> @Model.Course</li>
    </ul>

    <form method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="/Student/Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
