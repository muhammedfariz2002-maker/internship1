@model internship1.Models.Student

@{
    await Html.RenderPartialAsync("_AdminNavbar");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Student | Admin PaneL</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --danger: #ef476f;
            --danger-dark: #d43f63;
            --danger-light: rgba(239, 71, 111, 0.1);
            --warning: #ffd166;
            --dark: #2b2d42;
            --light: #f8f9fa;
            --gray: #e9ecef;
            --shadow: 0 4px 12px rgba(0,0,0,0.08);
        }

        body {
            background: linear-gradient(135deg, #fef2f5 0%, #ffeef1 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .delete-container {
            max-width: 700px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .delete-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow);
            overflow: hidden;
            border: none;
            animation: fadeIn 0.5s ease;
            border-top: 5px solid var(--danger);
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .delete-header {
            background: linear-gradient(90deg, var(--danger), var(--danger-dark));
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .warning-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            animation: pulse 2s infinite;
        }

        .header-title {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .student-id-badge {
            background: rgba(255,255,255,0.2);
            padding: 0.25rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-block;
            margin-top: 0.5rem;
        }

        .delete-body {
            padding: 2.5rem;
        }

        .confirmation-message {
            text-align: center;
            font-size: 1.1rem;
            color: var(--dark);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .student-info {
            background: var(--danger-light);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border-left: 4px solid var(--danger);
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(239, 71, 111, 0.1);
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-icon {
            color: var(--danger);
            width: 30px;
            font-size: 1.2rem;
        }

        .info-label {
            font-weight: 600;
            color: var(--dark);
            min-width: 80px;
        }

        .info-value {
            color: #495057;
            flex: 1;
        }

        .permanent-warning {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

            .permanent-warning i {
                color: #e6b850;
                font-size: 1.2rem;
                margin-top: 0.2rem;
            }

        .warning-text {
            color: #856404;
            margin: 0;
        }

        .delete-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-delete {
            background: linear-gradient(90deg, var(--danger), var(--danger-dark));
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s;
            flex: 1;
            justify-content: center;
            cursor: pointer;
            font-size: 1.05rem;
        }

            .btn-delete:hover {
                background: linear-gradient(90deg, var(--danger-dark), #c23758);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(239, 71, 111, 0.3);
            }

            .btn-delete:active {
                transform: translateY(0);
            }

        .btn-cancel {
            background: white;
            color: #6c757d;
            border: 2px solid var(--gray);
            padding: 1rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            transition: all 0.3s;
            text-decoration: none;
            flex: 1;
            justify-content: center;
            font-size: 1.05rem;
        }

            .btn-cancel:hover {
                background: var(--gray);
                color: var(--dark);
                border-color: #adb5bd;
                text-decoration: none;
            }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .delete-body {
                padding: 1.5rem;
            }

            .delete-header {
                padding: 1.5rem;
            }

            .delete-actions {
                flex-direction: column;
            }

            .btn-delete,
            .btn-cancel {
                width: 100%;
            }

            .confirmation-message {
                font-size: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .delete-container {
                padding: 0 10px;
                margin: 1rem auto;
            }

            .warning-icon {
                font-size: 2.5rem;
            }

            .info-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .info-label {
                min-width: auto;
            }

            .student-info {
                padding: 1rem;
            }
        }

        /* Typing animation for warning text */
        .typing-text {
            overflow: hidden;
            border-right: 2px solid var(--danger);
            white-space: nowrap;
            animation: typing 3.5s steps(40, end), blink-caret 0.75s step-end infinite;
        }

        @@keyframes typing {
            from {
                width: 0
            }

            to {
                width: 100%
            }
        }

        @@keyframes blink-caret {
            from, to {
                border-color: transparent
            }

            50% {
                border-color: var(--danger)
            }
        }

        /* Confirmation Modal Stylesss */
        .confirmation-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

            .confirmation-modal.show {
                display: flex;
                animation: fadeIn 0.3s ease;
            }

        .modal-content {
            background: white;
            padding: 2rem;
            border-radius: 16px;
            max-width: 400px;
            width: 90%;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="delete-container">
        <div class="delete-card">
            <!-- Header -->
            <div class="delete-header">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h2 class="header-title">Delete Student</h2>
                <p class="mb-0">This action cannot be undone</p>
                <div class="student-id-badge">ID: @Model.Id</div>
            </div>

            <!-- Body -->
            <div class="delete-body">
                <!-- Confirmation Message -->
                <div class="confirmation-message typing-text">
                    Are you absolutely sure you want to delete this student?
                </div>

                <!-- Permanent Warning -->
                <div class="permanent-warning">
                    <i class="fas fa-exclamation-circle"></i>
                    <p class="warning-text">
                        <strong>Warning:</strong> This action is permanent. Once deleted, the student record cannot be recovered.
                    </p>
                </div>

                <!-- Student Information -->
                <div class="student-info">
                    <h5 class="mb-3 text-center" style="color: var(--danger);">
                        <i class="fas fa-user-circle me-2"></i>
                        Student Details
                    </h5>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="info-label">Name:</div>
                        <div class="info-value">@Model.Name</div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="info-label">Email:</div>
                        <div class="info-value">@Model.Email</div>
                    </div>

                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div class="info-label">Course:</div>
                        <div class="info-value">@Model.Course</div>
                    </div>
                </div>

                <!-- Actions -->
                <form method="post" id="deleteForm">
                    <div class="delete-actions">
                        <button type="submit" class="btn-delete" id="deleteBtn">
                            <i class="fas fa-trash-alt"></i>
                            Yes, Delete Permanently
                        </button>
                        <a href="/Student/Index" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            Cancel & Return
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('deleteForm');
            const deleteBtn = document.getElementById('deleteBtn');
            let isConfirmed = false;

            form.addEventListener('submit', function(e) {
                e.preventDefault();

                if (!isConfirmed) {
                    // Show custom confirmation
                    const confirmed = confirm('⚠️ FINAL WARNING ⚠️\n\nAre you absolutely sure you want to delete "' +
                        '@Model.Name' + '"?\n\nThis action is PERMANENT and CANNOT be undone.');

                    if (confirmed) {
                        // Second confirmation for extra safety
                        const doubleConfirmed = confirm('DOUBLE CONFIRMATION REQUIRED\n\nType "DELETE" to confirm permanent deletion:');

                        if (doubleConfirmed && prompt('Please type DELETE to confirm:') === 'DELETE') {
                            isConfirmed = true;
                            deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';
                            deleteBtn.disabled = true;
                            deleteBtn.classList.add('pulse-animation');
                            form.submit();
                        }
                    }
                } else {
                    // If already confirmed, submit the form
                    form.submit();
                }
            });

            // Cancel button hover effect
            const cancelBtn = document.querySelector('.btn-cancel');
            cancelBtn.addEventListener('mouseenter', function() {
                this.innerHTML = '<i class="fas fa-arrow-left"></i> Cancel & Return';
            });

            cancelBtn.addEventListener('mouseleave', function() {
                this.innerHTML = '<i class="fas fa-times"></i> Cancel & Return';
            });

            // Add pulse animation to delete button
            deleteBtn.addEventListener('mouseenter', function() {
                if (!this.disabled) {
                    this.style.animation = 'pulse 1s infinite';
                }
            });

            deleteBtn.addEventListener('mouseleave', function() {
                this.style.animation = '';
            });

            // Prevent accidental double-click
            deleteBtn.addEventListener('dblclick', function(e) {
                e.preventDefault();
                alert('Please click only once to delete.');
            });

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Escape key cancels
                if (e.key === 'Escape') {
                    window.location.href = '/Student/Index';
                }

                // Enter key with confirmation
                if (e.key === 'Enter' && e.ctrlKey) {
                    e.preventDefault();
                    deleteBtn.click();
                }
            });

            // Disable form resubmission on refresh
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        });
    </script>
</body>
</html>