@model internship1.Models.Student

@{
    await Html.RenderPartialAsync("_AdminNavbar");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Student | Admin Panel</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary: #4361ee;
            --primary-dark: #3a56d4;
            --warning: #ffd166;
            --warning-dark: #e6bc5c;
            --danger: #ef476f;
            --dark: #2b2d42;
            --light: #f8f9fa;
            --gray: #e9ecef;
            --shadow: 0 4px 12px rgba(0,0,0,0.08);
            --shadow-hover: 0 8px 24px rgba(0,0,0,0.12);
        }

        body {
            background: linear-gradient(135deg, #f5f7fb 0%, #e9ecef 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-container {
            max-width: 700px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .form-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow);
            overflow: hidden;
            border: none;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-header {
            background: linear-gradient(90deg, var(--warning), #ffb142);
            color: #333;
            padding: 2rem;
        }

        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-icon {
            background: rgba(255,255,255,0.3);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
        }

        .student-id {
            background: rgba(0,0,0,0.1);
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-left: 1rem;
        }

        .back-btn {
            background: rgba(255,255,255,0.3);
            color: #333;
            border: 1px solid rgba(255,255,255,0.5);
            padding: 0.5rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
            transition: all 0.3s;
        }

            .back-btn:hover {
                background: rgba(255,255,255,0.5);
                transform: translateX(-5px);
                color: #333;
            }

        .form-body {
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.8rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .form-label i {
                color: var(--warning-dark);
                width: 20px;
            }

        .form-control {
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid var(--gray);
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                border-color: var(--warning-dark);
                box-shadow: 0 0 0 0.25rem rgba(255, 209, 102, 0.25);
            }

        .input-container {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .form-control:focus + .input-icon {
            color: var(--warning-dark);
        }

        .validation-message {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
            font-size: 0.875rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2.5rem;
            padding-top: 2rem;
            border-top: 1px solid var(--gray);
        }

        .btn-update {
            background: linear-gradient(90deg, var(--warning), var(--warning-dark));
            color: #333;
            border: none;
            padding: 0.875rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s;
            flex: 1;
            justify-content: center;
        }

            .btn-update:hover {
                background: linear-gradient(90deg, var(--warning-dark), #e6b850);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 209, 102, 0.3);
                color: #333;
            }

        .btn-cancel {
            background: white;
            color: #6c757d;
            border: 2px solid var(--gray);
            padding: 0.875rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s;
            text-decoration: none;
            flex: 1;
            justify-content: center;
        }

            .btn-cancel:hover {
                background: var(--gray);
                color: var(--dark);
                border-color: #adb5bd;
            }

        /* Status Indicator */
        .status-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 209, 102, 0.1);
            border-radius: 10px;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--warning);
        }

            .status-indicator i {
                color: var(--warning-dark);
            }

        @@media (max-width: 768px) {
            .form-body {
                padding: 1.5rem;
            }

            .form-header {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-update,
            .btn-cancel {
                width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .form-container {
                padding: 0 10px;
                margin: 1rem auto;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-title {
                width: 100%;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .student-id {
                margin-left: 0;
                align-self: flex-start;
            }

            .back-btn {
                width: 100%;
                justify-content: center;
                margin-top: 1rem;
            }

            .form-control {
                padding-left: 2.5rem;
            }
        }

        .required::after {
            content: ' *';
            color: var(--danger);
        }

        .form-control.is-invalid {
            border-color: var(--danger);
        }

            .form-control.is-invalid:focus {
                box-shadow: 0 0 0 0.25rem rgba(239, 71, 111, 0.25);
            }

        .text-danger {
            color: var(--danger) !important;
        }

        /* Edit History Note */
        .edit-note {
            background: rgba(67, 97, 238, 0.05);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-top: 1rem;
            font-size: 0.85rem;
            color: #6c757d;
            border-left: 3px solid var(--primary);
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-card">
            <!-- Header -->
            <div class="form-header">
                <div class="header-content">
                    <div class="header-title">
                        <div class="header-icon">
                            <i class="fas fa-user-edit"></i>
                        </div>
                        <div>
                            <h2 class="mb-1">Edit Student Details</h2>
                            <p class="mb-0">Update student information</p>
                        </div>
                        <span class="student-id">ID: @Model.Id</span>
                    </div>
                    <a href="/Student/Index" class="back-btn">
                        <i class="fas fa-arrow-left"></i>
                        Back to Students
                    </a>
                </div>
            </div>

            <!-- Form -->
            <div class="form-body">
                <!-- Status Indicator -->
                <div class="status-indicator">
                    <i class="fas fa-info-circle"></i>
                    <span>You are editing student record. All changes will be saved immediately.</span>
                </div>

                <form method="post" id="editForm">
                    <input type="hidden" asp-for="Id" />

                    <!-- Name Field -->
                    <div class="form-group">
                        <label class="form-label required">
                            <i class="fas fa-user"></i>
                            Full Name
                        </label>
                        <div class="input-container">
                            <input asp-for="Name"
                                   class="form-control"
                                   placeholder="Enter student's full name"
                                   autocomplete="name"
                                   autofocus />
                            <i class="fas fa-user input-icon"></i>
                        </div>
                        <span asp-validation-for="Name" class="validation-message text-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>Please enter a valid name</span>
                        </span>
                    </div>

                    <!-- Email Field -->
                    <div class="form-group">
                        <label class="form-label required">
                            <i class="fas fa-envelope"></i>
                            Email Address
                        </label>
                        <div class="input-container">
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="student@example.com"
                                   autocomplete="email" />
                            <i class="fas fa-envelope input-icon"></i>
                        </div>
                        <span asp-validation-for="Email" class="validation-message text-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>Please enter a valid email address</span>
                        </span>
                    </div>

                    <!-- Course Field -->
                    <div class="form-group">
                        <label class="form-label required">
                            <i class="fas fa-graduation-cap"></i>
                            Course
                        </label>
                        <div class="input-container">
                            <input asp-for="Course"
                                   class="form-control"
                                   placeholder="e.g., Computer Science, Business Administration"
                                   autocomplete="off" />
                            <i class="fas fa-graduation-cap input-icon"></i>
                        </div>
                        <span asp-validation-for="Course" class="validation-message text-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>Please enter a course name</span>
                        </span>
                    </div>

                    <!-- Edit History Note -->
                    <div class="edit-note">
                        <i class="fas fa-history"></i>
                        <span>Last updated: @DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")</span>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <button type="submit" class="btn-update" id="updateBtn">
                            <i class="fas fa-save"></i>
                            Update Student
                        </button>
                        <a href="/Student/Index" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editForm');
            const updateBtn = document.getElementById('updateBtn');

            // Store original values to detect changes
            const originalValues = {
                name: document.querySelector('input[name="Name"]').value,
                email: document.querySelector('input[name="Email"]').value,
                course: document.querySelector('input[name="Course"]').value
            };

            form.addEventListener('submit', function(e) {
                let isValid = true;
                const inputs = form.querySelectorAll('input[type="text"], input[type="email"]');

                // Basic validation
                inputs.forEach(input => {
                    if (!input.value.trim()) {
                        isValid = false;
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                    return;
                }

                // Check if any changes were made
                const currentValues = {
                    name: document.querySelector('input[name="Name"]').value,
                    email: document.querySelector('input[name="Email"]').value,
                    course: document.querySelector('input[name="Course"]').value
                };

                const hasChanges = originalValues.name !== currentValues.name ||
                                 originalValues.email !== currentValues.email ||
                                 originalValues.course !== currentValues.course;

                if (!hasChanges) {
                    e.preventDefault();
                    if (confirm('No changes were made. Return to student list?')) {
                        window.location.href = '/Student/Index';
                    }
                    return;
                }

                // Show loading state
                updateBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
                updateBtn.disabled = true;

                // You can add AJAX submission here if needed
                // form.submit(); // This will proceed with normal form submission
            });

            // Clear validation on input
            const inputs = form.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    this.classList.remove('is-invalid');

                    // Enable/disable button based on changes
                    const currentName = document.querySelector('input[name="Name"]').value;
                    const currentEmail = document.querySelector('input[name="Email"]').value;
                    const currentCourse = document.querySelector('input[name="Course"]').value;

                    const hasChanges = originalValues.name !== currentName ||
                                     originalValues.email !== currentEmail ||
                                     originalValues.course !== currentCourse;

                    if (hasChanges) {
                        updateBtn.innerHTML = '<i class="fas fa-save"></i> Update Student';
                    } else {
                        updateBtn.innerHTML = '<i class="fas fa-save"></i> No Changes';
                    }
                });
            });

            // Auto-focus first field
            setTimeout(() => {
                const firstInput = form.querySelector('input[autofocus]');
                if (firstInput) {
                    firstInput.focus();
                    firstInput.select();
                }
            }, 100);
        });
    </script>
</body>
</html>